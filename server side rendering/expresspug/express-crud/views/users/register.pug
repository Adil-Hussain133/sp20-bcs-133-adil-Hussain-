extends ../layout

block content 
    h1 signup
    form(action="/register",method="post")
        .form-group 
            label(for="name") Product name 
            input#name(type="text",class="form-control",name ="name")  
        .form-group 
            label(for="email") email
            input#name(type="email",class="form-control",name ="email")  

        .form-group 
            label(for="password") password 
            input#name(type="password",class="form-control",name="password") 

        input(type="submit", class="btn btn-info" , value="register")